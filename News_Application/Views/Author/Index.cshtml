@model IEnumerable<News_Application.Models.Author>

@{
    ViewBag.Title = "Index";
}

<style>

    .btn {
        display: inline-block;
        margin-right: 5px;
        padding: 2px 12px;
    }
</style>

@if (Request.IsAuthenticated)

{

    <p>
        @Html.Partial("_CreateButtonPartian")
    </p>
}

    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>



                        @if (Request.IsAuthenticated)

                        {

                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-success btn" });

                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-danger btn" });

                        }



                    </td>
                </tr>
            }

        </table>

    </div>

<style>
    form-control {
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
    }
</style>