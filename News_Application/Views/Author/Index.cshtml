@model IEnumerable<News_Application.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Request.IsAuthenticated)

{

    <p>
        @Html.Partial("_CreateButtonPartian")
    </p>
}
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>



                @if (Request.IsAuthenticated)

                {

                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-success" });
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn-success" });
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-success" });

                }



            </td>
        </tr>
    }

</table>
<style>
    form-control {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
    }
</style>