
@model List<News_Application.Models.author>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewAuthor">Add new Author</a><br /><br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Author Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Date Of Birth</th>
                <th>Action(Edit)</th>
                <th>Action(Delete)</th>

            </tr>
        </thead>
        <tbody id="SetAuthorList">
            <tr id="LoadingStatus"></tr>
        </tbody>
    </table>

</div>

<script>
    $("#LoadingStatus").html("Loading........");
    $.get("/author/GetAuthorList", null, DataBind);

    function DataBind(authors) {
        var SetData = $("#SetAuthorList");
        for (var i = 0; i < authors.length; i++) {

            var Date = "<tr class='row_" + authors[i].Id + "'>+
            "<td>" + authors[i].Id + "</td>" +
                "<td>" + authors[i].Name + "</td>" +
                "<td>" + authors[i].Email + "</td>" +
                "<td>" + authors[i].DateOfBirth + "</td>" +
                "<td>" + authors[i].PhoneNumber + "</td>" +
                "</tr>";
            SetData.append(Date);
            $("#LoadingStatus").html(" ");

        }
    }

</script>
